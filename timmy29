sum=0

n=int(input("Enter a number:"))

for current_number in range(1, n+1): #for loop to get user input in the input range
    
 sum= sum+current_number#sum of ranged numbers
print ("Sum of the first" , n , "natural numbers using formula is:", sum)

average = sum/ n # average of the input number
print("Average of", n , "numbers is:", average)
current_number
